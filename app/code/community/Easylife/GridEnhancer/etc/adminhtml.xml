        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <easylife_gridenhancer translate="title" module="easylife_gridenhancer">
                                        <title>Grid enhancer.</title>
                                    </easylife_gridenhancer>
                                </children>
                            </config>
                        </children>
                    </system>
                    <catalog>
                        <children>
                            <products>
                                <children>
                                    <easylife_gridenhancer translate="title" module="easylife_gridenhancer">
